@model IEnumerable<CadastroEscola.Models.Materia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeMateria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediaFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Situacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProfessor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAluno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediaFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Situacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProfessor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAluno)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMateria">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMateria">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMateria">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
